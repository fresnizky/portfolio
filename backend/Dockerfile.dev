# Development Dockerfile for Backend with hot reload
FROM node:24-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Copy Prisma files needed for postinstall
COPY prisma ./prisma
COPY prisma.config.ts ./

# Install dependencies (includes postinstall which runs prisma generate)
RUN pnpm install

# Copy remaining source code (will be overridden by volume mount in dev)
COPY . .

# Copy and set entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

EXPOSE 3000

ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["pnpm", "dev"]
