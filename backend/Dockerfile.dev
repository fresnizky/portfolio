# Development Dockerfile for Backend with hot reload
FROM node:24-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Copy Prisma files needed for postinstall
COPY prisma ./prisma
COPY prisma.config.ts ./

# Install dependencies (includes postinstall which runs prisma generate)
RUN pnpm install

# Copy remaining source code (will be overridden by volume mount in dev)
COPY . .

EXPOSE 3000

CMD ["pnpm", "dev"]
