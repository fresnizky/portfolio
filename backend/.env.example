# Backend Environment Variables
# Copy to .env and configure values

# Database connection
DATABASE_URL=postgresql://portfolio_user:portfolio_pass@db:5432/portfolio

# Test Database (E2E tests use this - separate from development)
# Run: docker compose -f docker-compose.test.yml up -d
TEST_DATABASE_URL=postgresql://portfolio_user:portfolio_pass@localhost:10013/portfolio_test

# JWT Secret for authentication
JWT_SECRET=your-secret-here-change-in-production

# Server configuration
NODE_ENV=development
PORT=3000
