{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Portfolio Tracker - Investment tracking application",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm dev:up",
    "dev:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env --env-file .env.ports up --build -d",
    "dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env --env-file .env.ports down",
    "dev:clean": "docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env --env-file .env.ports down -v",
    "dev:logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env --env-file .env.ports logs -f",
    "dev:logs:backend": "docker logs -f portfolio-backend-1",
    "dev:logs:frontend": "docker logs -f portfolio-frontend-1",
    "dev:local:up": "./scripts/dev-local.sh",
    "dev:services": "docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env --env-file .env.ports up backend db --build -d",
    "dev:services:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env --env-file .env.ports down",
    "prod:up": "docker compose -f docker-compose.prod.yml --env-file .env up --build -d",
    "prod:down": "docker compose -f docker-compose.prod.yml down",
    "prod:clean": "./scripts/prod-clean.sh",
    "prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "prod:logs:backend": "docker logs -f portfolio_backend_prod",
    "prod:logs:frontend": "docker logs -f portfolio_frontend_prod",
    "test": "pnpm test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:e2e:p0": "playwright test --grep '\\[P0\\]'",
    "test:e2e:p1": "playwright test --grep '\\[P0\\]|\\[P1\\]'",
    "test:e2e:p2": "playwright test --grep '\\[P0\\]|\\[P1\\]|\\[P2\\]'",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:up": "docker compose -f docker-compose.e2e.yml up --build -d",
    "test:e2e:down": "docker compose -f docker-compose.e2e.yml down",
    "test:e2e:clean": "docker compose -f docker-compose.e2e.yml down -v",
    "test:e2e:logs": "docker compose -f docker-compose.e2e.yml logs -f",
    "test:e2e:logs:backend": "docker logs -f portfolio_backend_e2e",
    "test:e2e:report": "playwright show-report",
    "docker:status": "docker ps --format 'table {{.Names}}\\t{{.Status}}\\t{{.Ports}}' | grep -E 'portfolio|NAME'",
    "docker:clean:all": "docker compose -f docker-compose.e2e.yml down -v; docker compose -f docker-compose.yml -f docker-compose.dev.yml down -v; docker compose -f docker-compose.prod.yml down -v"
  },
  "keywords": [
    "portfolio",
    "tracker",
    "investment"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.3",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21"
  }
}
